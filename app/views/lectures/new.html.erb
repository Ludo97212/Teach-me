<div class="container">
  <%= simple_form_for @lecture do |f| %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :price %>
    <%= f.association :category %>
    <%= f.input :photo, as: :file %>
    <%= f.submit "Ajoutez votre cours", class: "btn btn-primary" %>
  <% end %>
</div>
