<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @category.photo.key, height: 500, crop: :fill %>')">
  <h1> <%= @category.name %> </h1>
</div>

<div class="container">
  <div class="card">
    <% @category.lectures.each do |lecture| %>
        <p><strong><%=lecture.name %></strong></p>
        <p><small><%= lecture.description %></small></p>
    <% end %>
  </div>
</div>
