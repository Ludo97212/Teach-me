<div class="banner" style="background-color: #389480">
  <%# NAVBAR %>
  <h1>Welcome to TEACH ME!</h1>
</div>
<div class="container">
  <h2>Discover our differents lectures</h2>
  <ul>
  <div class="grid">
      <% @categories.each do |category| %>
          <li>
            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path category.photo.key, crop: :fill %>')">
            <%= link_to category.name, category_path(category) %>
            </div>
          </li>
      <% end %>
  </div>
  </ul>
</div>
